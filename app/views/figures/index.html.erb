
<h2>Highest Rated:</h2>
<% if @figures %>
  <ul>
  <% @figures.to_a.slice(0,3).each do |figure| %>
    <li/><%= figure.name  %>
  <% end %>
  </ul>
<h2>Lowest Rated:</h2>
  <ul>
  <% @figures.to_a.slice(-3, 3).each do |figure| %>
    <li/><%= figure.name  %>
  <% end %>
  </ul>

<h3>Figure List</h3>
  <ul>
  <% @figures.each do |figure| %>
    <li>
      <%= link_to figure.name, figure_path(figure) %> - Average Rating: <%= @figures_with_average_rating[figure.id] %>
      <% if @user && @user.admin?%>
          <%= button_to 'Delete Figure', "/figures/#{figure.id}", { method: :delete, data: { confirm: 'Are you sure?' }} %>
      <% end %>
    </li>
  <% end %>
  </ul>
<% end %>
