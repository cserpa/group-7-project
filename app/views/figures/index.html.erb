<%= stylesheet_link_tag    'application', media: 'all' %>

<nav class="fixed-nav-bar">
  <!-- Fixed navigation bar content -->
</nav>

<h1 align="center">Historical Figure Index<h1>
<% if @figures %>
  <ul>
  <% @figures.each do |figure| %>
    <li>
      <%= link_to figure.name, figure_path(figure) %> - Average Rating: <%= @figures_with_average_rating[figure.id] %>
    </li>
  <% end %>
  </ul>
<% end %>

<% if @figures.blank? %>
  <h4>There are no figures that match <%= params[:search] %></h4>
  <a href="http://localhost:3000/figures/new">Create a new page for this figure!</a>
<% end %>

<p>Highest Rated - <%= @figures[0] %></p>
<p>Lowest Rated - <%= @figures[-1] %></p>
