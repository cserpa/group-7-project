<%= stylesheet_link_tag    'application', media: 'all' %>



<div class="center-profile small-12 medium-12 large-12 columns">
  <%= image_tag(@user.avatar.large_avatar) %>


  <h2><%= @user.name %></h2>
  <% if @user.figures %>
    <% @user.figures.each do |figure| %>
      <div class="small-6 medium-6 large-6 columns">
        <%= link_to figure.name, figure_path(figure) %>
        <div class="profile-buttons">
          <%= link_to 'Delete', "/figures/#{figure.id}", { method: :delete, data: { confirm: 'Are you sure?' }} %> -
          <%= link_to 'Edit', edit_figure_path(figure), method: :get %>
        </div>
      </div>

    <% end %>
  <% end %>

  <div class="profile-links small-12 medium-12 large-12 columns">
    <%= link_to 'Edit Profile Picture', edit_user_path(@user) %> /
    <%= link_to 'Edit Account Info', edit_user_registration_path(@user) %>
  </div>



  <div class="small-12 medium-12 large-12 columns">
    <%= button_to 'Delete Account', @user, { method: :delete, data: { confirm: 'Are you sure?' }} %>
  </div>
</div>
